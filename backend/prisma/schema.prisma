generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UploadFile {
  id Int @id @default(autoincrement())
  filename String
  mimetype   String    // tipo MIME: application/pdf
  filetype   String   // estensione: pdf
  filepath String
  size Int?
  createdAt DateTime @default(now())
  fileReferences FileReference[]  // Relazione con la tabella di collegamento
}
model FileReference {
  id Int @id @default(autoincrement())
  tableName String    // nometabella
  tableId Int      // idtabella
  fileLabel String    // etichettafile
  // Relazione con UploadFile
  fileId Int
  file UploadFile @relation(fields: [fileId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@index([tableName, tableId])  // Indice per migliorare le performance delle query
}


